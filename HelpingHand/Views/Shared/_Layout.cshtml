<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/footerBottom.css" rel="stylesheet" />

    

</head>
<body>
    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Helping Hand", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        @if (User.IsInRole("Customer"))
                        {
                            <li>@Html.ActionLink("Customer", "GetCustomerID", "Home")</li>
                            <li>@Html.ActionLink("More Links", "Contact", "Home")</li> // this link can be altered to make more user specific links in the header.  Arguments are ("Link Title", "View", "Controller")
                        }
                        @if (User.IsInRole("Manager"))
                        {
                            <li>@Html.ActionLink("Manager Console", "Contact", "Home")</li>
                            <li>@Html.ActionLink("More Links", "Contact", "Home")</li> // this link can be altered to make more user specific links in the header.  Arguments are ("Link Title", "View", "Controller")
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin Console", "Index", "Account")</li>
                            <li>@Html.ActionLink("More Links", "Contact", "Home")</li> // this link can be altered to make more user specific links in the header.  Arguments are ("Link Title", "View", "Controller")
                        }
                        @if (User.IsInRole("Driver"))
                        {
                            <li>@Html.ActionLink("Driver", "GetDriverID", "Home")</li>
                            <li>@Html.ActionLink("More Links", "Contact", "Home")</li> // this link can be altered to make more user specific links in the header.  Arguments are ("Link Title", "View", "Controller")
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Sodium.dCC</p>
            </footer>
        </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
